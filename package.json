{
  "name": "read-tsconfig-sync",
  "version": "1.1.8",
  "description": "Loads tsconfig.json files including extends",
  "keywords": [
    "read",
    "load",
    "get",
    "ts",
    "typescript",
    "tsconfig",
    "tsconfig.json",
    "sync"
  ],
  "homepage": "https://github.com/kmalakoff/read-tsconfig-sync",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kmalakoff/read-tsconfig-sync.git"
  },
  "license": "MIT",
  "author": "Kevin Malakoff <kmalakoff@gmail.com> (https://github.com/kmalakoff)",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json",
    "./tsconfig.json": "./tsconfig.json"
  },
  "main": "dist/cjs/index.js",
  "source": "src/index.ts",
  "types": "dist/cjs/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsds build",
    "format": "tsds format",
    "generate:schema": "node scripts/generate-schema.mjs",
    "prepublishOnly": "tsds validate",
    "test": "tsds test:node --no-timeouts",
    "test:engines": "nvu engines tsds test:node --no-timeouts",
    "version": "tsds version"
  },
  "dependencies": {
    "is-absolute": "^1.0.0",
    "module-root-sync": "^2.0.1",
    "remove-bom-buffer": "^3.0.0",
    "resolve": "^1.22.11"
  },
  "devDependencies": {
    "@sourcegraph/tsconfig": "^4.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.1",
    "json-schema-to-typescript": "^15.0.4",
    "node-version-use": "^2.1.5",
    "ts-dev-stack": "^1.21.3",
    "tsds-config": "^0.2.1"
  },
  "engines": {
    "node": ">=0.8"
  }
}
